<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
		controllerName="sap.ui.demo.controller.Q3" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Question 3">
	<headerContent>
		<Button icon="sap-icon://customer" press="onUser"  ></Button>
	<Label id="name" labelFor="name"/>
		</headerContent>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
	      <VBox class="sapUiSmallMargin">
		<Text text="What is the name of Ironsman's A.I in Avengers Infinity War?" />
			<RadioButtonGroup columns="4" class="sapUiMediumMarginBottom" id= "RBG">
				<buttons id = "RB">
					<RadioButton id="1" text="Jarvis"/>
					<RadioButton id="2" text="Vision"/>
					<RadioButton id="3" text="Veronica"/>
					<RadioButton id="4" text="Pepper"/>
				</buttons>
			</RadioButtonGroup>
	   </VBox>
		</l:content>
		</l:VerticalLayout>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Submit" type="Accept" press="onSubmit" />
			</Toolbar>
		</footer>
	</Page>
</core:View>